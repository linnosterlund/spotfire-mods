{
    "apiVersion": "1.3",
    "version": "1.1",
    "name": "Marimekko Chart",
    "id": "js-dev-marimekkochart",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "x-axis-mode",
            "type": "string",
            "defaultValue": "percentage"
        },
        {
            "name": "mekko",
            "type": "boolean",
            "defaultValue": false
        },
        {
            "name": "title",
            "type": "boolean",
            "defaultValue": true
        },
        {
            "name": "sort",
            "type": "boolean",
            "defaultValue": false
        },
        {
            "name": "reverse-segments",
            "type": "boolean",
            "defaultValue": false
        },
        {
            "name": "reverse-bars",
            "type": "boolean",
            "defaultValue": false
        },
        {
            "name": "numeric-segment",
            "type": "boolean",
            "defaultValue": false
        },
        {
            "name": "percentage-segment",
            "type": "boolean",
            "defaultValue": false
        }
    ],
    "dataViewDefinition": {
        "tooltip": { "enabled": true },
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "X",
                "mode": "categorical",
                "placement": "bottom"
            },
            {
                "name": "Y",
                "mode": "continuous",
                "placement": "left",
                "allowMultipleMeasures": true
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "scales.js",
        "d3.js",
        "rectangleSelection.js",
        "main.js"
    ]
}